<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/menu_dialog"
        android:layout_width="170.0dip"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_with_shadow_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_contact"
            style="@style/popupmenulinearlayout">

            <TextView
                android:id="@+id/contact_text"
                style="@style/popupmenutextview"
                android:text=" add_contact" />
        </LinearLayout>

        <ImageView
            android:id="@+id/divider1"
            style="@style/popupmenudivider" />

        <LinearLayout
            android:id="@+id/ll_notification"
            style="@style/popupmenulinearlayout">

            <TextView
                style="@style/popupmenutextview"
                android:text="notification" />
        </LinearLayout>

        <ImageView style="@style/popupmenudivider" />

        <LinearLayout
            android:id="@+id/ll_add_block"
            style="@style/popupmenulinearlayout">

            <TextView
                android:id="@+id/black_text"
                style="@style/popupmenutextview"
                android:text="add_blacklist" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>